{
  "manifest_version": 3,
  "name": "Demo Recorder",
  "description": "Records your screen ",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },

  "host_permissions": ["http://*/", "https://*/*"],

  "permissions": ["scripting", "tabs", "activeTab"]
}
